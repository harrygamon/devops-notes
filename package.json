{
  "name": "electron-devops-notes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "server": "node server.js",
    "server-dev": "nodemon server.js",
    "dev-full": "concurrently \"npm run server\" \"npm run dev\"",
    "setup:news": "./scripts/setup-news-api.sh",
    "docker:build": "./scripts/build-docker.sh",
    "docker:deploy": "./scripts/deploy.sh",
    "docker:run": "docker run -d -p 3000:80 --name devops-notes devops-notes:latest",
    "docker:compose": "docker compose up -d",
    "docker:compose:prod": "docker compose -f compose.prod.yaml up -d",
    "docker:compose:dev": "docker compose --profile development up -d",
    "docker:build:all": "docker build --target web -t electron-devops-notes:latest . && docker build --target backend -t electron-devops-notes-backend:latest .",
    "docker:build:web": "docker build --target web -t electron-devops-notes:latest .",
    "docker:build:backend": "docker build --target backend -t electron-devops-notes-backend:latest .",
    "docker:build:dev": "docker build --target development -t electron-devops-notes-dev:latest .",
    "docker:build:electron": "docker build --target electron -t electron-devops-notes-electron:latest .",
    "docker:stop": "docker compose down",
    "docker:stop:prod": "docker compose -f compose.prod.yaml down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:prod": "docker compose -f compose.prod.yaml logs -f",
    "docker:clean": "docker compose down && docker system prune -f",
    "docker:clean:all": "docker compose down && docker compose -f compose.prod.yaml down && docker system prune -af",
    "docker:restart": "docker compose restart",
    "docker:restart:prod": "docker compose -f compose.prod.yaml restart"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "nodemon": "^3.0.2",
    "vite": "^7.0.0",
    "wait-on": "^7.0.1"
  }
}
