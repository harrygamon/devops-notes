{
  "name": "electron-devops-notes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "homepage": "https://harrygamon.github.io/devops-notes",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "server": "node server.js",
    "server-dev": "nodemon server.js",
    "dev-full": "concurrently \"npm run server\" \"npm run dev\"",
    "start": "concurrently \"npm run server\" \"npm run electron\"",
    "start-dev": "concurrently \"npm run server-dev\" \"npm run electron-dev\"",
    "build-app": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "build:gh-pages": "vite build --base=/devops-notes/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.2.0",
    "nodemon": "^3.0.2",
    "vite": "^7.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.devops.notes",
    "productName": "DevOps Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "server.js",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
